<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jose.examen.InfoActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:text="Informacio Seleccionada"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="60dp"
        android:text="Nom i CongNoms"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:text="Edad"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="132dp"
        android:layout_alignEnd="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView9"
        android:layout_below="@+id/textView9"
        android:layout_marginTop="20dp"
        android:text="Sexe"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView10"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="20dp"
        android:text="Puntuacio"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView11"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="20dp"
        android:text="lectures"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="304dp" />

    <TextView
        android:id="@+id/viewNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView8"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="81dp" />

    <TextView
        android:id="@+id/viewEdad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView9"
        tools:layout_editor_absoluteX="180dp"
        tools:layout_editor_absoluteY="127dp" />

    <TextView
        android:id="@+id/viewSexe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView10"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="187dp" />

    <TextView
        android:id="@+id/viewPuntuacio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView11"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="244dp" />

    <TextView
        android:id="@+id/viewLectures"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/textView12"
        tools:layout_editor_absoluteX="179dp"
        tools:layout_editor_absoluteY="304dp" />

    <Button
        android:id="@+id/btnTancar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tancar Finestra"
        tools:layout_editor_absoluteX="206dp"
        tools:layout_editor_absoluteY="359dp"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/viewLectures"
        android:layout_alignStart="@+id/viewLectures" />
</RelativeLayout>
